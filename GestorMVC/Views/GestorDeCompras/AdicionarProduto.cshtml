@model GestorMVC.Models.Produto
@using GestorMVC.Helpers

@{
    ViewData["Title"] = "Adicionar Produto";
    var categorias = HtmlHelpers.EnumParaLista<GestorMVC.Models.Enums.CategoriaProduto>();
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarProdutoPost" method="post">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Validade" class="control-label">Validade (deixar vazio caso n√£o possua)</label>
                <input type="date" asp-for="Validade" class="form-control" />
                <span asp-validation-for="Validade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-select">
                    @foreach (var item in categorias)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                 <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaturaId" class="control-label"></label>
                <input asp-for="FaturaId" min="1" value="@ViewBag.Id" class="form-control" />
                <span asp-validation-for="FaturaId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a href="javascript:history.back()" >Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}